  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const hint = document.getElementById('hint');
    const success = document.getElementById('success');
    const subtitle = document.getElementById('subtitle');

    const overlay = document.getElementById('overlay');
    const closeModal = document.getElementById('closeModal');
    const cancelModal = document.getElementById('cancelModal');
    const agreeBtn = document.getElementById('agreeBtn');
    const tcBox = document.getElementById('tcBox');
    const scrollNote = document.getElementById('scrollNote');

    let noAttempts = 0;

    const noLines = [
      "Are you sure? üôÇ",
      "That seems‚Ä¶ suspicious.",
      "Interesting choice. Wrong, but interesting.",
      "Okay but like‚Ä¶ think again.",
      "No is currently out of stock.",
      "No has been discontinued due to being mean."
    ];

    function spawnHeart(){
      const h = document.createElement('div');
      h.className = 'heart';
      h.textContent = Math.random() > 0.5 ? 'üíó' : 'üíò';
      h.style.left = Math.round(Math.random()*100) + 'vw';
      h.style.setProperty('--dx', (Math.random()*160 - 80) + 'px');
      h.style.fontSize = (14 + Math.random()*10) + 'px';
      document.body.appendChild(h);
      setTimeout(()=>h.remove(), 5600);
    }
    // subtle hearts occasionally
    setInterval(() => { if (success.style.display !== 'block') spawnHeart(); }, 900);

    function openModal(){
      overlay.style.display = 'grid';
      tcBox.scrollTop = 0;
      agreeBtn.disabled = true;
      scrollNote.textContent = "Scroll to the bottom to enable ‚ÄúI Agree‚Äù.";
    }

    function closeModalFn(){
      overlay.style.display = 'none';
    }

    function shrinkNoButton(){
      // shrink + fade the "No" button each attempt
      const scale = Math.max(0, 1 - noAttempts * 0.15); // 1.00, 0.85, 0.70, ...
      const opacity = Math.max(0, 1 - noAttempts * 0.18);

      noBtn.style.transform = `scale(${scale})`;
      noBtn.style.opacity = `${opacity}`;

      // change text progressively
      const idx = Math.min(noAttempts, noLines.length - 1);
      hint.textContent = noLines[idx];

      // eventually remove "No"
      if (scale <= 0.25 || opacity <= 0.15 || noAttempts >= 6){
        noBtn.disabled = true;
        noBtn.style.display = 'none';
        hint.textContent = "The ‚ÄòNo‚Äô option has been removed for safety reasons.";
      }
    }

    // Enable Agree only when scrolled to bottom
    tcBox.addEventListener('scroll', () => {
      const nearBottom = tcBox.scrollTop + tcBox.clientHeight >= tcBox.scrollHeight - 6;
      if (nearBottom){
        agreeBtn.disabled = false;
        scrollNote.textContent = "Great. You definitely read all 37 pages üòå";
      } else {
        agreeBtn.disabled = true;
        scrollNote.textContent = "Scroll to the bottom to enable ‚ÄúI Agree‚Äù.";
      }
    });

    noBtn.addEventListener('click', () => {
      if (noBtn.disabled) return;
      openModal();
    });

    agreeBtn.addEventListener('click', () => {
      closeModalFn();
      noAttempts++;
      shrinkNoButton();
    });

    closeModal.addEventListener('click', closeModalFn);
    cancelModal.addEventListener('click', closeModalFn);

    yesBtn.addEventListener('click', () => {
      subtitle.textContent = "Correct answer detected ‚úÖ";
      success.style.display = 'block';
      hint.textContent = "";
      // celebratory hearts burst
      for(let i=0;i<18;i++) setTimeout(spawnHeart, i*80);
    });

    // close modal on clicking outside
    overlay.addEventListener('click', (e) => {
      if (e.target === overlay) closeModalFn();
    });
  </script>
</body>
